<div class="inner-dashboard">
    <div class="user-title">
        <h1>Hey, <%= userName %></h1>
        <a href="/dashboard/create-note" class="new-note"><h3>+ New Note</h3></a>
    </div>

    <div class="parent-note">

        <% if (notes.length > 0) { %> 
            <div class="notes-wrapper">
            
                <%for(var i=0; i < notes.length; i++) { %>
                    <div class="note">
                        <a href="/dashboard/view-note/<%= notes[i]._id %>" class="note-link">
                            <h4 class="note-title"><%= notes[i].title %></h4>
                            <p class="note-body"><%= notes[i].body %></p>
                        </a>
                    </div>
                <%  } %>
            </div>
            <% }else{ %>
                <div class="blank-notes">
                    <p class="">Seems like you don't have any notes right now. &#129300</p>        
                    <a href="/create-note" class="new-note">New Note</a>
                </div>
            <% } %>
        </div>
        

        

    </div>
    <% if(notes.length > 0) { %>
        <nav class="pagination-parent">
          <ul class="pagination">
            <% if(current == 1) { %>
              <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <% } else { %>
              <li class="page-item"><a class="page-link" href="/dashboard">First</a></li>
            <% }  %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1 ) { %>
              <li class="page-item"><a class="page-link" href="#">...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
              <% if(i == current ) { %>
                <li class="page-item"><a class="page-link" href="#"><%= i %></a></li>
              <% } else { %>
                <li class="page-item"><a class="page-link" href="/dashboard/?page=<%= i %>"><%= i %></a></li>
              <% } %>
              <% if(i == Number(current) + 4 && i < pages) { %>
                <li class="page-item"><a class="page-link" href="#">...</a></li>
              <% } %>
            <% } %>
            <% if (current == pages) { %>
                <li class="page-item disabled"><a class="page-link">Last</a></li>
            <% } else { %>
                <li class="page-item"><a href="/dashboard/?page=<%= pages %>" class="page-link">Last</a></li>
            <% } %>
          </ul>
        </nav>
    
      <% } %>
</div>